#lang eopl
(define contador 0)

(define contar
  (lambda ()
    (set! contador (+ 1 contador))
    )
 )

(display contador) (display "\n"); 0
(contar); 0 + 1 = 1
(display contador) (display "\n"); 1
(contar); 1 + 1 = 2
(display contador) (display "\n"); 2
(contar); 2 + 1 = 3
(display contador) (display "\n"); 3